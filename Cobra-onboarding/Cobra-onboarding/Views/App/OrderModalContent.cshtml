
<!-- Create/Edit Modal -->

<div ng-show="modalTplIn.modalId==='createEdit'">
    <form angular-validator-submit="dataPostOrder(createEditOrderForm)" name="createEditOrderForm" novalidate angular-validator>
        <div class="modal-body">
            <div class="form-horizontal">
                <span ng-show="serverValErr" style="color:red; font-style:oblique">Server Validation Error.</span>
                <div class="form-group">
                    <label class="control-label col-md-3">Order Date</label>
                    <div class="col-md-9">
                        <input name="orderDate" type="date" class="form-control" validate-on="dirty" ng-model="o.OrderDate" min="2015-01-01" max="{{today}}" 
                               invalid-message="'Date format is invalid.'" required-message="'Date is required.'" required />
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="col-md-offset-0 col-md-12">
                <button type="submit" class="btn btn-primary">Save</button>
                <button ng-click="closeIn(createEditOrderForm)" type="button" class="btn btn-default">Close</button>
            </div>
        </div>
    </form>
</div>



<!-- Detail Modal -->

<div ng-show="modalTplIn.modalId==='detail'">
    <div class="modal-body">

        <div class="form-horizontal">
            <span ng-show="serverValErr" style="color:red; font-style:oblique">Server Validation Error.</span>
            <div class="form-group">
                <label class="control-label col-md-4">Order Date</label>
                <p class="control-label col-md-3">{{o.OrderDate | date:'dd/MM/yyyy'}}</p>
            </div>

            <div class="form-group">
                <label class="control-label col-md-4" for="ProductList">Product List</label>
                <div class="col-md-8">
                    <div ng-repeat="x in orderDetails">
                        <p class="control-label col-md-4">{{x.ProductName}}</p>
                        <button ng-click="removeProduct(x.OrderDetailId)" type="button" class="btn btn-default btn-sm">Remove</button>
                        <br />
                    </div>
                </div>
            </div>

            <button ng-click="addProduct()" type="button" class="btn btn-default btn-sm">{{addButtonName}}</button>
        </div>
        <!-- Add Product Modal -->

        <div ng-show="modalTplIn.modalIdDetailAdd==='detailAdd'">
            <div class="modal-header">
                <h4 class="modal-title">Add Product</h4>
            </div>

            <div class="modal-body">
                <form name="addForm">
                    <div class="form-group">
                        <label class="control-label col-md-3" for="PersonId">Product Name</label>
                        <div class="col-md-9">
                            <select name="selectedProductId" ng-model="SeletedProductId" class="form-control" style="display:inline-block" required>
                                <option ng-repeat="p in productList" value="{{p.ProductId}}" ng-selected="1">{{p.ProductName}}</option>
                            </select>
                            &nbsp;
                            <button ng-click="addProductFromList(SeletedProductId, addForm)" type="button" class="btn btn-default">Add</button>
                            <br />
                            <span ng-show="addForm.selectedProductId.$touched && addForm.selectedProductId.$error.required" style="color:red; font-style:oblique">Product is required.</span>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>

    <div class="modal-footer">
        <div class="col-md-offset-2 col-md-10">
            <button ng-click="deletePostInDetail(form)" type="button" class="btn btn-default">Delete</button>
            <button ng-click="closeIn(addForm)" type="button" class="btn btn-default">Close</button>
        </div>
    </div>
</div>
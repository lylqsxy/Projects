
<h2>Customer List</h2>

<p>
    <button type="button" class="btn btn-primary" ng-click="createCustomer()">Create New</button>
</p>
<div>
    <table class="table">
        <tr>
            <th>
                Customer ID
            </th>
            <th>
                Customer Name
            </th>
            <th>
                Address
            </th>
            <th>
                Town/City
            </th>
            <th>
                Total Order
            </th>
            <th>

            </th>
        </tr>

        <tr ng-repeat="x in customerList" id="{{x.Id}}">
            <td>
                {{x.Id}}
            </td>
            <td>
                {{x.Name}}
            </td>
            <td>
                {{x.Address1}}, {{x.Address2}}
            </td>
            <td>
                {{x.Town_City}}
            </td>
            <td>
                {{x.OrderCount}}
            </td>
            <td>
                <button type="button" class="btn btn-default" ng-click="editCustomer(x)">Edit</button>
                <button type="button" class="btn btn-default" ng-click="orderCustomer(x)">Details</button>
                <button type="button" class="btn btn-default" ng-click="deleteCustomer(x)">Delete</button>
            </td>
        </tr>

    </table>
</div>

<div id="orderAnchor" ng-show="showOrder" ng-include="'/Order'"></div>



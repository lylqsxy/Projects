@model IEnumerable<Cobra_onboarding.Models.OrderHeader>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @Class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Person.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate.Value.Day)/@Html.DisplayFor(modelItem => item.OrderDate.Value.Month)/@Html.DisplayFor(modelItem => item.OrderDate.Value.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Person.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.OrderId }, new { @Class = "btn btn-default" })
            @Html.ActionLink("Details", "Details", new { id=item.OrderId }, new { @Class = "btn btn-default" })
            @Html.ActionLink("Delete", "Delete", new { id = item.OrderId }, new { @Class = "btn btn-default" })
        </td>
    </tr>
}

</table>

@model AucklandHighSchool.Models.TeacherDetailsViewModel
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="margin:auto; width:auto">
    <h1>@Model.Name</h1>
    <h3>Gender: @Model.Gender</h3>

    @if (Model.ClassList.Count > 0)
    {
        <h3>Class List: </h3>
        foreach (var item in Model.ClassList)
        {
            <a onclick="location.href='@Url.Action("Details", "Class", new { id = item.Id}, null)'"><span>@item.Name</span></a>
            <br />
        }
    }
    else
    {
        <h3>There are no class belong to this teacher</h3>
    }

    @if (Model.SubjectList.Count > 0)
    {
        <h3>Subject List: </h3>
        foreach (var item in Model.SubjectList)
        {
            <a onclick="location.href='@Url.Action("Details", "Subject", new { id = item.Id}, null)'"><span>@item.Name</span></a>
            <br />
        }
    }
    else
    {
        <h3>There are no subject belong to this teacher</h3>
    }

    <br />

    <button type="button" class="btn btn-primary " onclick="location.href='@Url.Action("Index", "Teacher", null)'">
        Go Back
    </button>
</div>
@model AucklandHighSchool.Models.TeacherEditViewModel

@using (Html.BeginForm("Edit", "Teacher", FormMethod.Post, new { @class = "form-horizontal col-lg-12 col-md-12 col-sm-12 col-xs-12", role = "form" }))
{
    if (Model.Id == 0)
    {
        <h1>Create a new teacher</h1>
    }
    else
    {
        <h1>Edit teacher</h1>
    }
    <br>
    <br>

    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 col-lg-2 control-label" })
        <div class="col-md-10 col-lg-10">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.FirstName, "", new { @style = "color:red" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 col-lg-2 control-label" })
        <div class="col-md-10 col-lg-10">
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.LastName, "", new { @style = "color:red" })
        </div>
    </div>

    List<SelectListItem> GenderList = new List<SelectListItem>();
    GenderList.Add(new SelectListItem
    {
        Text = "Male",
        Value = "Male"
    });

    GenderList.Add(new SelectListItem
    {
        Text = "Female",
        Value = "Female"
    });

    <div class="form-group">
        @Html.LabelFor(m => m.Gender, new { @class = "col-md-2 col-lg-2 control-label" })
        <div class="col-md-10 col-lg-10">
            @Html.DropDownListFor(m => m.Gender, GenderList, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10 col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-success "><span style="margin-right: 5px" class="glyphicon glyphicon-ok"></span>Ok</button>
            <button type="button" class="btn btn-danger " onclick="location.href='@Url.Action("Index", "Teacher", null)'"><span style="margin-right: 5px" class="glyphicon glyphicon-remove"></span>Cancel</button>
        </div>
    </div>
}

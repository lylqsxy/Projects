@model AucklandHighSchool.Models.StudentDetailsViewModel
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="margin:auto; width:auto">
    <h1>@Model.Name</h1>
    <h3>Gender: @Model.Gender</h3>

    @if (Model.ClassList.Count > 0)
    {
        <h3>Enrolment Class List: </h3>
        foreach (var item in Model.ClassList)
        {
            <a onclick="location.href='@Url.Action("Details", "Class", new { id = item.Id}, null)'"><span>@item.Name</span></a>
            <br />
        }
    }
    else
    {
        <h3>There are no enrolments belong to this student</h3>
    }

    <br />

    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Student", null)'">
        Go Back
    </button>

    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("EnrolmentAdd", "Student", new { id = Model.Id },null)'">
        <p style="margin:auto"><span class="glyphicon glyphicon-plus"></span> Add/Remove Enrolment</p>
    </button>
</div>
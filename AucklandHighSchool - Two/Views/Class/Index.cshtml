@model List<AucklandHighSchool.Models.ClassViewModel>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="margin:auto; width:auto">
        <h1>Class List</h1>
        <br>
        <button type="button" class="btn btn-primary btn-lg" onclick="location.href='@Url.Action("Edit", "Class", new { id = 0 })'">
            <p style="margin:auto"><span class="glyphicon glyphicon-plus"></span> Add Class</p>
        </button>
        <br>
        <br>
        <table class="table table-striped table-hover table-responsive table-condensed col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <tr>
                <th>
                    <h3><span style="font-weight:bolder">Name</span></h3>
                </th>
                <th>
                    <h3><span style="font-weight:bolder">Subject</span></h3>
                </th>
                <th>
                    <h3><span style="font-weight:bolder">Teacher</span></h3>
                </th>
                <th>
                    <h3><span style="font-weight:bolder"># Enrolments</span></h3>
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="col-lg-2 col-sm-3 col-md-3 col-xs-3">
                        <span style="font-size: 15px;">@Html.DisplayFor(modelItem => item.ClassName)</span>
                    </td>
                    <td class="col-lg-2 col-sm-3 col-md-3 col-xs-3">
                        <span style="font-size: 15px;">@Html.DisplayFor(modelItem => item.SubjectName)</span>
                    </td>
                    <td class="col-lg-2 col-sm-3 col-md-2 col-xs-3">
                        <span style="font-size: 15px;">@Html.DisplayFor(modelItem => item.TeacherName)</span>
                    </td>
                    <td class="col-lg-2 col-sm-3 col-md-2 col-xs-3">
                        <span style="font-size: 15px;">@Html.DisplayFor(modelItem => item.EnrolmentCount)</span>
                    </td>
                    <td class="col-lg-4 col-md-4 hidden-xs hidden-sm">
                        <button type="button" class="btn btn-warning col-lg-3  col-md-3" onclick="location.href='@Url.Action("Edit", "Class", new { id = item.Id}, null)'"><span style="margin-right: 5px" class="glyphicon glyphicon-pencil"></span>Edit</button>

                        <button type="button" class="btn btn-info col-lg-3 col-lg-offset-1 col-md-3 col-md-offset-1" onclick="location.href='@Url.Action("Details", "Class", new { id = item.Id }, null)'"><span style="margin-right: 5px" class="glyphicon glyphicon-align-justify"></span>Details</button>

                        <button type="button" class="btn btn-danger col-lg-3 col-lg-offset-1 col-md-3 col-md-offset-1" onclick="location.href='@Url.Action("Delete", "Class", new { id = item.Id }, null)'"><span style="margin-right: 5px" class="glyphicon glyphicon-trash"></span>Delete</button>

                    </td>
                </tr>
            }

        </table>
    </div>




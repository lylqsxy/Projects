@model AucklandHighSchool.Models.ClassDetailsViewModel
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="margin:auto; width:auto">
    <h1>@Model.Name</h1>

    <h3>Subject: <a onclick="location.href='@Url.Action("Details", "Subject", new { id = Model.SubjectId}, null)'"><span>@Model.SubjectName</span></a></h3>

    <h3>Teacher: <a onclick="location.href='@Url.Action("Details", "Teacher", new { id = Model.TeacherId}, null)'"><span>@Model.TeacherName</span></a></h3>

    @if (Model.StudentList.Count > 0)
    {
        <h3>Enrolment List: </h3>
        foreach (var item in Model.StudentList)
        {
            <a onclick="location.href='@Url.Action("Details", "Student", new { id = item.Id}, null)'"><span>@item.FirstName @item.LastName</span></a>
            <br />
        }
    }
    else
    {
        <h3>There are no enrolment in this class</h3>
    }

    <br />

    <button type="button" class="btn btn-primary " onclick="location.href='@Url.Action("Index", "Class", null)'">
        Go Back
    </button>
</div>

   


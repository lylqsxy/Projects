
<div ng-controller="OrganisationAdministrationCtrl" class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="margin:auto; width:auto">
    <h1>Organisation Administration</h1>
    <br>
    <button type="button" class="btn btn-primary" ng-click="createOrganisation()">
        <p style="margin:auto"><span class="glyphicon glyphicon-plus"></span> Add Organisation</p>
    </button>
    <br>
    <br>
    @Html.AntiForgeryToken()
    <table class="table table-striped table-hover table-responsive table-condensed col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <tr>
            <th style="width: auto !important">
                <h4><span style="font-weight:bolder">#</span></h4>
            </th>
            <th>
                <h4><span style="font-weight:bolder">Organisation</span></h4>
            </th>
            <th>
                <h4><span style="font-weight:bolder">Website</span></h4>
            </th>
            <th></th>
        </tr>
        <tr ng-repeat="item in data | orderBy: 'CreatedOn':true">
            <td class="col-lg-1 col-sm-1 col-md-1 col-xs-1">
                <span style="font-size: 15px;">{{$index + 1}}</span>
            </td>
            <td class="col-lg-2 col-sm-3 col-md-3 col-xs-3">
                <span style="font-size: 15px;">{{item.OrgName}}</span>
            </td>
            <td class="col-lg-2 col-sm-3 col-md-2 col-xs-3">
                <span style="font-size: 15px;"><a ng-href="{{item.WebsiteUrl}}" target="_blank">{{item.WebsiteUrl}}</a></span>
            </td>
            <td class="col-lg-2 col-md-2 hidden-xs hidden-sm">
                <button ng-controller="EditOrganisationCtrl" type="button" class="btn btn-warning col-lg-2 col-md-2" ng-click="editOrganisation($event, data.indexOf(item))"><span class="glyphicon glyphicon-pencil"></span></button>

                <button ng-controller="DeleteOrganisationCtrl" type="button" class="btn btn-danger col-lg-2 col-lg-offset-1 col-md-2 col-md-offset-1" ng-click="deleteOrganisation(item.Id)"><span class="glyphicon glyphicon-trash"></span></button>

            </td>
            <td class="col-sm-2 col-xs-2 hidden-lg hidden-md">
                <button type="button" class="btn btn-warning col-sm-3 col-xs-3" ng-click="editOrganisation(item.Id)"><span style="margin-right: 5px" class="glyphicon glyphicon-pencil"></span></button>

                <button ng-controller="DeleteOrganisationCtrl" type="button" class="btn btn-danger col-sm-3 col-sm-offset-1 col-xs-3" ng-click="deleteOrganisation(item.Id)"><span style="margin-right: 5px" class="glyphicon glyphicon-trash"></span></button>
            </td>
        </tr>

    </table>
</div>

@section scripts{
    <script src="~/App/controllers/admin/OrganisationAdministrationCtrl.js"></script>
    <script src="~/App/controllers/admin/DeleteOrganisationCtrl.js"></script>
    <script src="~/App/controllers/admin/EditOrganisationCtrl.js"></script>
}


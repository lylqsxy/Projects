@{
    ViewBag.Title = "Sign Up";
}

<script src="~/App/controllers/account/RegisterCtrl.js"></script>
<script src="~/App/controllers/account/SocialMediaCtrl.js"></script>
}

<div id="fb-root"></div>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="contact-sec">
                <div class="row">
                    <div class="col-md-6">
                        <div class="widget-title">
                            <h3>Register Your Account</h3>
                            <span>Fill your detail to get in</span>
                        </div>
                        <div class="account-form" ng-controller="RegisterCtrl">
                            <form angular-validator-submit="submitRegisterForm()" name="registerForm" class="form-horizontal" novalidate angular-validator>
                                @Html.AntiForgeryToken()
                                <div class="row">
                                    <div class="row">
                                        <div class="col-md-8 feild">
                                            <input type="email"
                                                   placeholder="Username"
                                                   ng-model="user.username"
                                                   name="emailAddress"
                                                   validate-on="dirty"
                                                   invalid-message="'Invalid email address'"
                                                   required-message="'Username is required'"
                                                   required>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-8 feild">
                                            <input type="password"
                                                   name="password"
                                                   placeholder="Password"
                                                   invalid-message="passwordValidator(user.password)"
                                                   ng-model="user.password"
                                                   validator="passwordValidator(user.password) === true"
                                                   validate-on="dirty"
                                                   required>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-8 feild">
                                            <input type="password"
                                                   name="confirmPassword"
                                                   placeholder="Re-type Password"
                                                   ng-model="user.confirmPassword"
                                                   validator="user.password === user.confirmPassword"
                                                   validate-on="dirty"
                                                   invalid-message="'Passwords do not match!'"
                                                   required>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <label>
                                            <input type="checkbox" required ng-model="user.termCondition" /> By Clicking on this you are agree with our <a title="">license & agreements</a>
                                        </label>
                                    </div>
                                    <div class="feild col-md-6">
                                        <input type="button" ng-disabled="registerForm.$invalid"
                                               ng-click="submitRegisterForm()"
                                               value="Register Now" />
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="more-option">
                            <span>OR</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-12 creat-an-account">
                                <span>Do you have an account?</span>
                                <a href="@Url.Action("Login", "Account")" title="">Login Now</a>
                                <h4>You can also Signup using</h4>
                                <div>
                                    @{ Html.RenderPartial("SocialMediaLoginPartial");}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section styles {
    <style type="text/css">
        input[type="email"], input[type="text"] {
            border: 1px solid #e6eaea;
            -webkit-border-radius: 30px;
            -moz-border-radius: 30px;
            border-radius: 30px;
            float: left;
            font-size: 13px;
            letter-spacing: 0.5px;
            margin-bottom: 10px;
            padding: 13px 30px;
            width: 100%;
        }
    </style>
}
@model AucklandHighSchool.Models.Student
@{
    ViewBag.Title = "Enrollment List";
}

<h2>Add/Remove Enrollments</h2>

@using (Html.BeginForm("EnrollmentAdd", "Student"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Student: @Model.FirstName  @Model.LastName</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                <h4 style="display: inline-block">Class: &nbsp;</h4>
                @Html.DropDownList("ClassID", (IEnumerable<SelectListItem>)ViewBag.ClassList, htmlAttributes: new { @class = "form-control", style = "display: inline-block " }) &nbsp;
                @Html.ValidationMessageFor(model => model, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.StudentID)
                <input type="submit" value="Create" class="btn btn-default" /> &nbsp;
                @Html.ActionLink("Back", "DetailStudent", new { Id = Model.StudentID }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

<table class="table" style="width: 500px">
    <tr>
        <th>
            Class Name
        </th>
        <th>
            Actions
        </th>
    </tr>

    @foreach (var item in Model.Enrollments)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Class.Name)
            </td>
            <td>
                <div style="display: inline-block">
                    @using (Html.BeginForm("EnrollmentRemove", "Student"))
                    {
                        @Html.Hidden("EnrollmentId", item.EnrollmentID)
                        <input type="submit" value="Remove" class="btn btn-danger" />
                    }
                </div>
            </td>
        </tr>
    }

</table>


@model AucklandHighSchool.Models.ViewModel.StudentDetailViewModel

@{
    ViewBag.Title = "Detail Student";
}

<div>
    <h2>
        @Html.DisplayFor(model => model.Name)
        @Html.EditIconLinkSmall("Edit", "EditStudent", new { Id = Model.StudentId, RedirectUrl = Request.Url.PathAndQuery })@Html.DeleteIconLinkPostSmall("Delete", "DeleteStudent", "Student", "Id", Model.StudentId.ToString())
    </h2>

    <h4>StudentID: @Model.StudentId</h4>

    <h3>
        @Html.LabelFor(model => model.Gender) @Html.DisplayFor(model => model.Gender)
    </h3>

    <h3>
        @Html.LabelFor(model => model.ClassList)
    </h3>

    <ul class="list-unstyled">
        @foreach (var item in Model.ClassList)
        {

            <li>@Html.ActionLink(item.Name, "DetailClass", "Class", new { Id = item.ClassID }, null)</li>
        }
    </ul>

</div>

<div>
    @Html.ActionLink("Add/Remove Enrollment", "EnrollmentList", new { StudentId = Model.StudentId }, new { @class = "btn btn-default" })
</div>

<br />

<br />

<div>
    @Html.IconGoBack("Back")
    @Html.BackToListIconLinkController("Back to List", "StudentList", "Student")
</div>

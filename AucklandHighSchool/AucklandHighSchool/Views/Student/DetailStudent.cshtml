@model AucklandHighSchool.Models.ViewModel.StudentDetailViewModel

@{
    ViewBag.Title = "Detail Student";
}

<div>
    <h2>
        @Html.DisplayFor(model => model.Name)
    </h2>

    <h3>
        @Html.LabelFor(model => model.Gender) @Html.DisplayFor(model => model.Gender)
    </h3>

    <h3>
        @Html.LabelFor(model => model.ClassList)
    </h3>

    <ul class="list-unstyled">
        @foreach (var item in Model.ClassList)
        {

            <li>@Html.DisplayFor(modelItem => item)</li>
        }
    </ul>

</div>

<div>
    @Html.ActionLink("Back", "StudentList", null, new { @class = "btn btn-default" })
    @Html.ActionLink("Add/Remove Enrollment", "EnrollmentList", new { Id = Model.Id }, new { @class = "btn btn-default" })
</div>

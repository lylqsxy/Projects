@model IEnumerable<AucklandHighSchool.Models.ViewModel.StudentViewModel>

@{
    ViewBag.Title = "Student List";
}

<h2>Student List</h2>
<br />

<p>
    @Html.AddIconLink("Add Student", "CreateStudent", new { RedirectUrl = Request.Url.PathAndQuery })
</p>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnrollmentCount)
        </th>
        <th>
            Actions
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                &nbsp;@Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentCount)
            </td>
            <td>
                @Html.EditIconLink("Edit", "EditStudent", new { Id = item.Id, RedirectUrl = Request.Url.PathAndQuery })
                @Html.DetailIconLink("Detail", "DetailStudent", new { Id = item.Id })
                @Html.DeleteIconLinkPost("Delete", "DeleteStudent", "Student", "Id", item.Id.ToString()) 
            </td>
        </tr>
    }

</table>

<div>
    @Html.IconGoBack("Back")
    @Html.BackToListIconLinkController("Back to Home", "Index", "Home")
</div>



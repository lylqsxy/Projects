@model IEnumerable<AucklandHighSchool.Models.ViewModel.TeacherViewModel>

@{
    ViewBag.Title = "Teacher List";
}

<h2>TeacherList</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClassCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubjectCount)
        </th>
        <th>
            Actions
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubjectCount)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditTeacher", new { Id = item.Id }, new { @class = "btn btn-default" })
                @Html.ActionLink("Detail", "DetailTeacher", new { Id = item.Id }, new { @class = "btn btn-default" })
                <div style="display: inline-block">
                    @using (Html.BeginForm("DeleteTeacher", "Teacher"))
                    {
                        <input name="Id" , value="@item.Id" hidden="hidden">
                        <input type="submit" value="Delete" class="btn btn-default" />
                    }
                </div>
            </td>
        </tr>
    }

</table>

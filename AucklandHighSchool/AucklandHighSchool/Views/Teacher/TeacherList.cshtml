@model IEnumerable<AucklandHighSchool.Models.ViewModel.TeacherViewModel>

@{
    ViewBag.Title = "Teacher List";
}

<h2>Teacher List</h2>
<br />

<p>
    @Html.AddIconLink("Add Teacher", "CreateTeacher", new { RedirectUrl = Request.Url.PathAndQuery })
</p>

<table class="table table-striped">
    <tr >
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClassCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubjectCount)
        </th>
        <th>
            Actions
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubjectCount)
            </td>
            <td>
                @Html.EditIconLink("Edit", "EditTeacher", new { Id = item.Id, RedirectUrl = Request.Url.PathAndQuery })
                @Html.DetailIconLink("Detail", "DetailTeacher", new { Id = item.Id })
                @Html.DeleteIconLinkPost("Delete", "DeleteTeacher", "Teacher", "Id", item.Id.ToString())        
            </td>
        </tr>
    }

</table>

<div>
    @Html.IconGoBack("Back")
    @Html.BackToListIconLinkController("Back to Home", "Index", "Home")
</div>

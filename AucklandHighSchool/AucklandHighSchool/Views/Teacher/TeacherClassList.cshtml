@model AucklandHighSchool.Models.Teacher
@{
    ViewBag.Title = "Class List";
}

<h2>Add/Remove Classes</h2>

@using (Html.BeginForm("ClassAdd", "Teacher"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Teacher: @Model.FirstName  @Model.LastName</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                <h4 style="display: inline-block">Class: </h4>
                @Html.TextBox("Name", null, new { @class = "form-control", style = "display: inline-block" })
                &nbsp;
                <h4 style="display: inline-block">Subject: </h4>
                @Html.DropDownList("SubjectID", (IEnumerable<SelectListItem>)ViewBag.SubjectList, htmlAttributes: new { @class = "form-control", style = "display: inline-block" }) &nbsp;
                @Html.ValidationMessageFor(model => model, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.TeacherID)
                @Html.AddIconButtonSubmit("Add")
                @Html.ActionLink("Back", "DetailTeacher", new { Id = Model.TeacherID }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

<table class="table" style="width: 700px">
    <tr>
        <th>
            Class Name
        </th>
        <th>
            Subject Name
        </th>
        <th>
            Actions
        </th>
    </tr>

    @foreach (var item in Model.Classes)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "DetailClass", "Class", new { Id = item.ClassID }, null)
            </td>
            <td>
                @Html.ActionLink(item.Subject.Name, "DetailSubject", "Subject", new { Id = item.SubjectID }, null)
            </td>
            <td>
                @Html.DeleteLinkPost("Remove", "ClassRemove", "Teacher", "ClassId", item.ClassID.ToString())
                @Html.ActionLink("Edit", "EditClass", "Class", new { Id = item.ClassID}, new { @class = "btn btn-default"})
            </td>
        </tr>
    }

</table>

<br />

<div>
    @Html.BackToListIconLink("Back to List", "TeacherList")
</div>


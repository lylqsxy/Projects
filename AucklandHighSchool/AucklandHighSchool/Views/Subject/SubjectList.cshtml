@model IEnumerable<AucklandHighSchool.Models.ViewModel.SubjectViewModel>

@{
    ViewBag.Title = "Subject List";
}

<h2>Subject List</h2>

<p>
    @Html.ActionLink("Create New", "CreateSubject")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeacherCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClassCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnrollmentsCount)
        </th>
        <th>
            Actions
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentsCount)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditSubject", new { Id = item.Id }, new { @class = "btn btn-default" })
                @Html.ActionLink("Detail", "DetailSubject", new { Id = item.Id }, new { @class = "btn btn-default" })
                <div style="display: inline-block">
                    @using (Html.BeginForm("DeleteSubject", "Subject"))
                    {
                        <input name="Id", value="@item.Id" hidden="hidden">
                        <input type="submit" value="Delete" class="btn btn-default" />
                    }
                </div>
            </td>
        </tr>
    }

</table>

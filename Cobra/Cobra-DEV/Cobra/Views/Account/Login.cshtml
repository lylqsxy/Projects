@{
    ViewBag.Title = "Sign In";
}

@section styles {
    <style type="text/css">
        input[type="email"], input[type="text"] {
            border: 1px solid #e6eaea;
            -webkit-border-radius: 30px;
            -moz-border-radius: 30px;
            border-radius: 30px;
            float: left;
            font-size: 13px;
            letter-spacing: 0.5px;
            margin-bottom: 10px;
            padding: 13px 30px;
            width: 100%;
        }
    </style>
}

@section scripts {
    <script src="~/App/controllers/account/LoginCtrl.js"></script>
}

<div class="container">
    <div class="row">

        <div class="col-md-8">
            <div class="contact-sec">
                <div class="row">
                    <div class="col-md-6">
                        <div class="widget-title">
                            <h3>User Login</h3>
                            <span>Fill your detail to get in</span>
                      
                        </div>
                        <div class="account-form" ng-controller="LoginCtrl">
                            @Html.AntiForgeryToken()
                            <form angular-validator-submit="submitLoginForm()" name="loginForm" class="form-horizontal" novalidate angular-validator>
                                <div class="row">
                                    <div class="feild col-md-12">
                                        <input type="email"
                                               placeholder="Username"
                                               ng-model="user.username"
                                               name="emailAddress"
                                               validate-on="dirty"
                                               invalid-message="'Invalid email address'"
                                               required-message="'Username is required'"
                                               required>
                                    </div>
                                    <div class="feild col-md-12">
                                        <input type="password" required 
                                               placeholder="Password"
                                               ng-model="user.password" validate-on="blur">
                                    </div>
                                    <div class="feild col-md-12">
                                        <span class="text-danger" style="padding-left:5px">{{errormessage}}</span>
                                    </div>
                                    <div class="feild col-md-12">
                                        <input type="button" ng-disabled="loginForm.$invalid" ng-click="submitLoginForm()" value="Login Now" />
                                    </div>
                                </div>


                            </form>

                        </div>
                        <div class="more-option">
                            <span>OR</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="creat-an-account">
                            <span>Don't have an account?</span>
                            <a href="@Url.Action("Register", "Account")" title="">Create Account</a>
                            <h4>You can also Signup using</h4>
                            <ul>
                                <li><a href="#" title=""><i class="fa fa-facebook"></i></a></li>
                                <li><a href="#" title=""><i class="fa fa-twitter"></i></a></li>
                                <li><a href="#" title=""><i class="fa fa-google-plus"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
